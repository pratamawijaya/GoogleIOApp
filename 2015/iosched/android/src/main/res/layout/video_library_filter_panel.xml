<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_drawer"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:background="@color/navdrawer_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginStart="@dimen/padding_normal"
        android:gravity="center_vertical|start"
        android:text="@string/title_video_library_filter"
        android:textAppearance="@style/TextAppearance.Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_normal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?android:listPreferredItemHeightSmall"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_normal"
                android:gravity="center_vertical|start"
                android:text="@string/year_filter_section_label"
                android:textAppearance="@style/TextAppearance.Subhead" />

            <RadioGroup
                android:id="@+id/years_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginTop="@dimen/divider_padding_top"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?android:listPreferredItemHeightSmall"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_normal"
                android:gravity="center_vertical|start"
                android:text="@string/topic_filter_section_label"
                android:textAppearance="@style/TextAppearance.Subhead" />

            <RadioGroup
                android:id="@+id/topics_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
