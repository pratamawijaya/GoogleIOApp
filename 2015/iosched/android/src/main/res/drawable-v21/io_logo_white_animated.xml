<!-- A vector version of the I/O logo.  This version includes a stroked version of the 'O'
     with the number 15 inside it.  By default is is hidden (scaled to zero size) so that
     we can animate it up at some point. -->

<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="356dp"
    android:height="275dp"
    android:viewportWidth="@integer/io_logo_viewport_width"
    android:viewportHeight="@integer/io_logo_viewport_height">

    <path
        android:name="i"
        android:pathData="@string/io_logo_i"
        android:fillColor="#ffffff" />
    <path
        android:name="slash"
        android:pathData="@string/io_logo_slash"
        android:fillColor="#ffffff" />
    <path
        android:name="o"
        android:pathData="@string/io_logo_o"
        android:fillColor="#ffffff" />

    <group
        android:name="15"
        android:pivotX="254"
        android:pivotY="138"
        android:scaleX="0"
        android:scaleY="0">
        <path
            android:name="cut_out"
            android:pathData="@string/io_logo_anim_cutout"
            android:fillColor="#26C6DA" />
        <path
            android:name="1"
            android:pathData="@string/io_logo_anim_1"
            android:fillColor="#ffffff" />
        <path
            android:name="5"
            android:pathData="@string/io_logo_anim_5"
            android:fillColor="#ffffff" />
    </group>

</vector>
