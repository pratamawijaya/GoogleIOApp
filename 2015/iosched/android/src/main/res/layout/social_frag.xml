<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.google.samples.apps.iosched.ui.widget.AspectRatioView
            android:id="@+id/io15_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:aspectRatio="@dimen/aspect_phi">

            <RelativeLayout
                android:background="@color/social_io15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/io15_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:src="@drawable/hash_io_15"
                    android:contentDescription="@string/io15_logo_not_clickable"
                    android:clickable="false"
                    android:focusable="false" />

                <include layout="@layout/social_icons_horizontal" />
            </RelativeLayout>
        </com.google.samples.apps.iosched.ui.widget.AspectRatioView>

        <com.google.samples.apps.iosched.ui.widget.AspectRatioView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:aspectRatio="3.236">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/social_gplus_devs">

                    <TextView
                        android:id="@+id/social_gplus_devs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="?android:selectableItemBackground"
                        android:textAppearance="@style/TextAppearance.Body2"
                        android:text="@string/social_gplus_devs"
                        android:contentDescription="@string/social_gplus_devs_content_description"
                        android:focusable="true"
                        android:clickable="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/social_twitter_devs">

                    <TextView
                        android:id="@+id/social_twitter_devs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="?android:selectableItemBackground"
                        android:textAppearance="@style/TextAppearance.Body2"
                        android:text="@string/social_twitter_devs"
                        android:contentDescription="@string/social_twitter_devs_content_description"
                        android:focusable="true"
                        android:clickable="true" />
                </FrameLayout>
            </LinearLayout>
        </com.google.samples.apps.iosched.ui.widget.AspectRatioView>

        <com.google.samples.apps.iosched.ui.widget.AspectRatioView
            android:id="@+id/extended_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:aspectRatio="3.236">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/social_extended"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Body2"
                        android:text="@string/social_extended"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/social_drawable_padding"
                        android:drawableLeft="@drawable/hash_io_15_flat"
                        android:contentDescription="@string/io15_extended_logo_not_clickable"
                        android:clickable="false"
                        android:focusable="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <include layout="@layout/social_icons_vertical"></include>
                </RelativeLayout>
            </LinearLayout>
        </com.google.samples.apps.iosched.ui.widget.AspectRatioView>

        <com.google.samples.apps.iosched.ui.widget.AspectRatioView
            android:id="@+id/request_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:aspectRatio="3.236">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/social_request"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Body2"
                        android:text="@string/social_request"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/social_drawable_padding"
                        android:drawableLeft="@drawable/hash_io_15_flat"
                        android:contentDescription="@string/io15_request_logo_not_clickable"
                        android:clickable="false"
                        android:focusable="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <include layout="@layout/social_icons_vertical"></include>
                </RelativeLayout>
            </LinearLayout>
        </com.google.samples.apps.iosched.ui.widget.AspectRatioView>

        <com.google.samples.apps.iosched.ui.widget.AspectRatioView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/social_logo_background"
            app:aspectRatio="@dimen/aspect_phi">

            <ImageView
                android:id="@+id/io_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/io_mark_social"
                android:contentDescription="@string/io_logo_not_clickable"
                android:clickable="false"
                android:focusable="false" />

        </com.google.samples.apps.iosched.ui.widget.AspectRatioView>
    </LinearLayout>
</ScrollView>